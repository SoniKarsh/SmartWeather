<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/toolbar_bg</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">@dimen/_5dp</item>
        <item name="android:translationZ">@dimen/_5dp</item>
        <item name="backgroundTint">@color/toolbar_bg</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/_20dp</item>
        <item name="rippleColor">@color/grey_50</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/_20dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20dp</item>
        <item name="hintTextColor">@color/primary_hint</item>
        <item name="android:textColorHint">@color/primary_hint</item>
        <item name="boxStrokeColor">@color/box_border_color</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="background">@null</item>
    </style>
</resources>